{
  "name": "React Facet Dev Tools for Chrome",
  "description": "TODO",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "file:///*",
    "http://*/*",
    "https://*/*"
  ],
  "devtools_page": "main.html",
  "web_accessible_resources": [
    "main.html",
    "panel.html",
    "dist/main.js"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/injectGlobalHook.js"
      ],
      "run_at": "document_start"
    }
  ]
}
